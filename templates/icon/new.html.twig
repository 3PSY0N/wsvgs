{% extends 'base_admin.html.twig' %}

{% block title %}New Icon{% endblock %}

{% block body %}
    <main class="pt-24 px-2 2xl:px-0">
        <div class="px-4 sm:px-6 lg:px-8 max-w-screen-2xl mx-auto">
            <div class="sm:flex sm:items-center">
                <div class="sm:flex-auto">
                    <h1 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Add new Icon</h1>
                    <p class="mt-2 text-sm text-gray-700 dark:text-gray-400">Icons in the category.</p>
                </div>
                <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
                    <a href="{{ path('app_icon_index') }}" type="button"
                       class="inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium
                     text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto"
                    >
                        back to list
                    </a>
                </div>
            </div>

            <div class="mt-8 flex flex-col">
                <div class="flex justify-center">
                    {{ form_start(form, {'attr': {'class': 'w-full'}}) }}
                    <div class="flex flex-col gap-4">
                        <div class="flex flex-wrap md:flex-nowrap gap-4">
                            <div class="w-full md:w-1/2">
                                {{ form_label(form.name, '', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-100'}}) }}
                                {{ form_widget(form.name, {'attr': {'class': 'input-slug mt-2 block w-full rounded-md shadow-sm border-transparent focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm bg-slate-50 dark:bg-slate-700 dark:text-slate-100'}}) }}
                                <div class="text-sm">{{ form_errors(form.name) }}</div>
                            </div>
                            <div class="w-full md:w-1/2">
                                {{ form_label(form.slug, '', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-100'}}) }}
                                {{ form_widget(form.slug, {'attr': {
                                    'class': 'slug mt-2 block w-full rounded-md shadow-sm border-transparent focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm bg-slate-50 dark:bg-slate-700 dark:text-slate-100',
                                }}) }}
                                <div class="text-sm">{{ form_errors(form.slug) }}</div>
                            </div>
                        </div>

                        <div class="flex flex-wrap md:flex-nowrap gap-4">
                            <div class="w-full md:w-1/2">
                                {{ form_label(form.svg, 'SVG Code', {'label_attr': {'class': 'block text-xs font-semibold text-gray-700 dark:text-gray-100 mb-2'}}) }}
                                {{ form_widget(form.svg, {'required': false}) }}
                                <div class="text-sm">{{ form_errors(form.svg) }}</div>
                            </div>

                            <div class="w-full md:w-1/2">
                                {{ form_label(form.categories, 'Categories', {'label_attr': {'class': 'block text-xs font-semibold text-gray-700 dark:text-gray-100 mb-2'}}) }}
                                {{ form_widget(form.categories, {'attr': {
                                    'class': 'slug mt-2 block w-full rounded-md shadow-sm border-transparent focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm bg-slate-50 dark:bg-slate-700 dark:text-slate-100',
                                }}) }}
                                <div class="text-sm">{{ form_errors(form.categories) }}</div>
                            </div>
                        </div>

                        <div>
                            <button class="inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto">
                                {{ button_label|default('Save') }}
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>

        </div>
    </main>
{% endblock %}
